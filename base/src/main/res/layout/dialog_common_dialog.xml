<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_rect_round"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center"
        android:textColor="@color/base_pink_a700"
        android:textSize="14dp"
        tools:text="title" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/base_purple_300"
        android:textSize="14dp"
        tools:text="message" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="27dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/ll_btn_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_red_a700"
            android:textSize="@dimen/dp_16"
            tools:text="不是" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_cyan_a700"
            android:textSize="@dimen/dp_16"
            tools:text="是的" />
    </LinearLayout>

    <TextView
        android:id="@+id/top_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="center"
        android:textColor="@color/base_green_100"
        android:textSize="@dimen/dp_16"
        android:visibility="gone"
        tools:text="top button"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/bottom_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="center_horizontal|center"
        android:textColor="@color/base_red_a700"
        android:textSize="@dimen/dp_16"
        android:visibility="gone"
        tools:text="bottom button"
        tools:visibility="visible" />
</LinearLayout>